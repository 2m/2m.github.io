---
extends: default
ignore-from-file: .gitignore
rules:
  # Disable requirement for `---` at the beginning of each file
  document-start: disable

  indentation:
    indent-sequences: false
    ignore: |
      pnpm-lock.yaml

  line-length:
    max: 100
    level: warning
    ignore: |
      pnpm-lock.yaml

  truthy:
    allowed-values: ['true', 'false', 'on']
